

<section>


			<%= link_to image_tag("logo.jpg", :size => "160x160"), root_path %>
			
	<% if signed_in? %>

			<a href="<%= edit_user_path(current_user) %>">
				<h3>
					<span>
				  	Logged in as <font size=5, color="#aaaaaa">@<%= current_user.twitter_handle %></font><br><br>
					</span>
				</h3>
			</a>
