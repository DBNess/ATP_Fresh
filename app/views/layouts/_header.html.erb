<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Agree the People", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <% if signed_in? %>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= "Logged in as #{current_user.twitter_handle}" %><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "My Agreements", current_user %></li>
                <li><%= link_to "My Settings", edit_user_path(current_user) %></li>
                <li><%= link_to "All Users", users_path %></li>
                <li class="divider"></li>
                <li><%= link_to "Sign Out", signout_path, method: "delete" %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign In With Twitter", signin_path %></li>
          <% end %>

        </ul>
      </nav>
    </div>
  </div>
</header>