<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Agree the People", root_path, id: "logo"%>

      <nav>
        <ul class="nav pull-left"><li><font color="white">beta</font></li></ul>


        <ul class="nav pull-right">
          <li><%= link_to "Topics", all_path %></li>
          <% if signed_in? %>
            <li><%= link_to "All Users", users_path %></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= "Logged in as #{current_user.twitter_handle}" %><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to current_user do %>
                     <icon class="icon-ok-sign"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;My Agreements
                  <% end %>
                </li>
                <li>
                  <%= link_to edit_user_path(current_user) do %>
                     <icon class="icon-cog"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;My Settings
                  <% end %>
                </li>
                <li class="divider"></li>
                <li>
                  <%= link_to signout_path, method: "delete" do %>
                     <icon class="icon-off"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Sign Out
                  <% end %>
                </li>

              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign In With Twitter", signin_path %></li>
          <% end %>

        </ul>
      </nav>
    </div>
  </div>
</header>