<% provide(:title, "Edit user") %>

<div class="row">
    <aside class="span3">

      <%= render 'shared/standard_left_bar' %>

    </aside>




    <div class="span9">

		<h1>Update your profile</h1>
 

	    <%= form_for(@user) do |f| %>
	      <%= render 'fields', f: f %>
	      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
	    <% end %>

		<%= gravatar_for @user %>
		<%= link_to "change", "http://gravatar.com/emails", target: "_blank" %>
	</div>



</div>












