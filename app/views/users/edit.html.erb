<% provide(:title, "Edit user") %>

		<h1>Update your profile</h1>
 

	    <%= form_for(@user) do |f| %>
	      <%= render 'fields', f: f %>
	      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
	    <% end %>


		<% if @user.imagelink.nil? %>
			<%= image_tag "http://a0.twimg.com/sticky/default_profile_images/default_profile_2_normal.png", size:"52x52" %>
		<% else %>
			<%= image_tag @user.imagelink, size:"70x70" %>
		<% end %>
