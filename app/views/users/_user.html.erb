<li>

	<div class="row" >

	<div class="span1">
		<% if user.imagelink.nil? %>
			<%= image_tag "http://a0.twimg.com/sticky/default_profile_images/default_profile_2_normal.png", size:"52x52" %>
		<% else %>
			<%= image_tag user.imagelink, size:"52x52" %>
		<% end %>

	</div>
	<div>

		<font size=4>
			<%= link_to "#{user.name} (@#{user.twitter_handle})", user %><br>
			<b><%= pluralize(user.points, "point") %><b>

			<% if current_user.admin? && !current_user?(user) %>
				| <%= link_to "delete", user, method: :delete, 
								data: {confirm: 'You sure?' } %>
			<% end %>
		</font>

	</div>
</div>
</li>