<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span3">
    <section>
      <h1>
        <%= gravatar_for(current_user, size: 100) %>
        <%= current_user.name %>
      </h1>
    </section>
  </aside>

  	<div class="span9">
      <% if current_user == @user %>
        <h1>All of my Agreements</h1>
        <%= render 'users/topics_voted' %>
      <% else %>

        <h1>What <%= @user.twitter_handle %> wrote </h1>

			     <%= render 'users/authored_agreements' %>
      <% end %>
    </div>


</div>