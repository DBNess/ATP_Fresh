<ul class="agreements">
	<% @important_topics.each do |topic| %>
			
			<% @this_topic = topic %>

			<%= link_to mainpage_path(topic.slug) do %>
				<font size=6 align="left"><b><%= topic.title %></b></font>
			<% end %>


			<% if current_user == @user %>
		    	<%= render 'users/voted_agreements' %>
		    <% elsif current_user.id != @user.id %>
		    	<%= render 'users/authored_agreements' %>
		    <% end %>
		


		<br><br><br>
	<% end %>
</ul>