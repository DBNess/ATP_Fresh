
<%= form_for(@topic.agreements.build) do |f| %>
	<div><%= f.hidden_field :user_id, value: current_user.id %></div>
	<div><%= f.hidden_field :topic_id, value: @topic.id %></div>	
	<div class="field">
			<%= f.text_area :content, placeholder: "This topic currently has #{@topic.agreements.count} posts. Add your voice to the conversation and see how many people agree!", 
			cols: 80, rows: 3, maxlength: 140 %>
			
			<%= f.submit "Add it to This Topic", class: "btn btn-primary" %>
	</div>
<% end %>

