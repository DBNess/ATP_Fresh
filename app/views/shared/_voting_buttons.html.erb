			<div><%= f.hidden_field :voter_id, value: current_user.id %></div>
		<% end %>
		<div><%= f.hidden_field :voteable_id, value: @agreement.id %></div>
		


			<table width=100%>
				<tr width=100%>
					<td width=40%>
						<div id="tweet_button"><%= render 'shared/tweet_button' %></div>
					</td>
					<td width=60%>
						<h3><font color="#aaaaaa">I agree, and it's</font></h3>
					</td>
				</tr>
				<tr>
					<td>
					</td>
					<td>
						<div>
							<%= f.submit "Sorta", class: "btn btn-large btn-info", value: LOW %>
